---
layout: layouts/layout-pages.njk
title: Tareas
---

<div class="task-container">
  <h1>Tareas de Aprendizaje</h1>

  {% for tarea in tareas.items %}
    <article class="tarea-card" id="{{ tarea.id }}">
      <h2>{{ tarea.titulo }}</h2>
      <p class="descripcion">{{ tarea.descripcion }}</p>

      <!-- Recursos -->
      <section class="recursos-section">
        <h3>📚 Recursos</h3>
        <ul>
          {% for recurso in tarea.recursos %}
            <li>
              <a href="{{ recurso.url }}" target="_blank" rel="noopener">
                {{ recurso.nombre }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </section>

      <!-- Tareas -->
      <section class="tareas-section">
        <h3>✅ Tareas</h3>
        <ul>
          {% for item in tarea.tareas %}
            <li>{{ item }}</li>
          {% endfor %}
        </ul>
      </section>

      <!-- Proyectos -->
      <section class="proyectos-section">
        <h3>🚀 Proyectos</h3>
        <ul>
          {% for proyecto in tarea.proyectos %}
            <li>{{ proyecto }}</li>
          {% endfor %}
        </ul>
      </section>
    </article>
  {% endfor %}

  <a href="{{ '/ruta-aprendizajeDS' | url }}" class="btn">← Volver</a>
</div>